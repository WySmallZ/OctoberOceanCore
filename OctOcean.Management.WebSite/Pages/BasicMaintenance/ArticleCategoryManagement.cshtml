@page
@model BasicMaintenance.ArticleCategoryManagementModel

@{
    ViewData["Title"] = "文章分类";
    Layout = "~/_Layout.cshtml";
}

<h2>文章分类管理</h2>

<form method="post">
    <table class="layui-table" lay-filter="actable" id="actable">
        <thead>
            <tr>
                <th>序号</th>
                <th>分类编码</th>
                <th>分类名称</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            @{
                int i = 0;
                foreach (var ac in Model.ArticleCategorys)
                {
            <tr>
                <td>@(++i)</td>
                <td>@ac.ArticleCategoryCode</td>
                <td>@ac.ArticleCategoryName</td>
                <td>
                    @*定位点标记帮助程序 使用 asp-route-{value} 属性生成“编辑”页面的链接，此处id必须和获取的参数name一致*@
                    <a asp-page="./ArticleCategoryEdit" asp-route-id="@ac.Id" class="layui-btn layui-btn-xs layui-btn-normal"><i class="layui-icon">&#xe642;</i>编辑</a>
                    
                    <button type="submit" asp-page-handler="delete" asp-route-id="@ac.Id" class="layui-btn layui-btn-xs layui-btn-del"><i class="layui-icon">&#xe640;</i>删除</button>
</td>
            </tr>
                    }
                }
        </tbody>
    </table>

    <a asp-page="./ArticleCategoryEdit" class="layui-btn layui-btn-sm layui-btn-green"><i class="layui-icon">&#xe608;</i>新增</a>
</form>


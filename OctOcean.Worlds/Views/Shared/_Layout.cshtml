<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OctOcean.Worlds</title>

    <link href="~/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <link href="~/css/syhy.base.css" rel="stylesheet" />

    @RenderSection("CustomHeadStyles", required: false)
    @RenderSection("CustomHeadScripts", required: false)

</head>
<body>
    <header class="site-header">
        <div class="site-container">
            <h1 class="site-title"><a href="/">OctOcean's Worlds</a></h1>
            <div class="site-header-menu">
                <ul>
                    <li class="@("home".Equals(ViewBag.CurrentArticleCategory,StringComparison.InvariantCultureIgnoreCase)?"site-header-menu-active":"")"><a href="/">Home</a></li>
                    <li class="@("dotnet".Equals(ViewBag.CurrentArticleCategory,StringComparison.InvariantCultureIgnoreCase)?"site-header-menu-active":"")"><a href="/Home/DOTNET">.NET</a></li>
                    <li class="@("java".Equals(ViewBag.CurrentArticleCategory,StringComparison.InvariantCultureIgnoreCase)?"site-header-menu-active":"")"><a href="/Home/JAVA">Java</a></li>
                    <li class="@("python".Equals(ViewBag.CurrentArticleCategory,StringComparison.InvariantCultureIgnoreCase)?"site-header-menu-active":"")"><a href="/Home/PYTHON">Python</a></li>
                    <li class="@("life".Equals(ViewBag.CurrentArticleCategory,StringComparison.InvariantCultureIgnoreCase)?"site-header-menu-active":"")"><a href="/Home/LIFE">生活</a></li>
                    <li class="@("other".Equals(ViewBag.CurrentArticleCategory,StringComparison.InvariantCultureIgnoreCase)?"site-header-menu-active":"")"><a href="/Home/OTHER">其它</a></li>

                </ul>
                <div class="clear"></div>
            </div>
        </div>
    </header>

    <div class="site-content">
        <div class="site-container">

            @RenderBody()

        </div>

    </div>


    <footer class="site-footer">
        <p>不积跬步,无以至千里;不积小流,无以成江海……</p>
    </footer>

    @RenderSection("CustomFootScripts", required: false)
</body>
</html>
